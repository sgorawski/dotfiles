# EditorConfig by sgorawski
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 8

[*.{c,cpp,h,go}]
indent_style = tab

[*.{py,php,hs}]
indent_style = space
indent_size = 4

[*.{js,rb,ml*,*sh}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
